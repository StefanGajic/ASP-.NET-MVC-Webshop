@model zTest2.Models.ChangePhoneViewModel
@{
    ViewBag.Title = "Change Phone Number";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("ChangePhone", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{

 
    <hr />

    <div class="form-group">
        @Html.LabelFor(m => m.OldPhone, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.OldPhone, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NewPhone, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.NewPhone, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Change phone number" class="btn btn-default" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}