@model zTest2.Models.ChangeFirstNameViewModel
@{
    ViewBag.Title = "Change First Name";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("ChangeFirstName", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{

    <hr />

    <div class="form-group">
        @Html.LabelFor(m => m.OldFirstName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.OldFirstName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NewFirstName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.NewFirstName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Change first name" class="btn btn-default" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}